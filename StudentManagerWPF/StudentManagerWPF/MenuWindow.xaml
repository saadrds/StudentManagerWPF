<Window x:Class="StudentManagerWPF.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:StudentManagerWPF"
        mc:Ignorable="d"
        Title="MenuWindow" Height="450" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <StackPanel>
        <Grid Height="20" Background="WhiteSmoke">


            <Image Source="Assets/back.png" HorizontalAlignment="Left"  MouseLeftButtonDown="Back"/>
            <Label Content="Gestion Des Etudiants" HorizontalAlignment="Center" Margin="0,-1.5" Foreground="#2fb7eb"  />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Image Source="Assets/shut.png"  MouseLeftButtonDown="Close" Margin="2" />
            </StackPanel>
        </Grid>
        <Grid Height="80">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10 0" Background="#cde4e7" >
                <Button Uid="0" Width="260" Content="GESTION DES ETUDIANTS " Height="50" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Black" Click="Choix_menu"/>
                <Button Uid="1" Width="260" Content="GESTION DES FILIERES " Height="50" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Black" Click="Choix_menu"/>
                <Button Uid="2" Width="260" Content="STATISTIQUE " Height="50" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Black" Click="Choix_menu" />
            </StackPanel>
            <Grid x:Name="GridCursor" Width="260" Height="5" Background="#2fb7eb" Margin="10,0,0,-20" HorizontalAlignment="Left"/>


        </Grid>
        <Grid Height="350">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="1">
                    <ComboBox x:Name="ComboBox1"  Width="auto"  IsEditable="True" IsReadOnly="True" Text="-- Choisir une filiere --" Margin="0,0,0,100" SelectionChanged="ComboBox1_SelectionChanged">
                        <ComboBoxItem>Genie informatique</ComboBoxItem>
                        <ComboBoxItem>Genie industriel</ComboBoxItem>
                        <ComboBoxItem>Genie Réseaux et Telecom</ComboBoxItem>
                        <ComboBoxItem>Genie Procédé Ciramique</ComboBoxItem>
                    </ComboBox>
                    <Border   Height="80" Width="auto" CornerRadius="4" BorderThickness="1" BorderBrush="#2fb7eb" Background="#cde4e7">
                    <StackPanel >
                            <WrapPanel Background="#2fb7eb" Width="190">
                            <TextBlock TextAlignment="Center" Margin="0,0,0,0">Informations sur la filiere</TextBlock>
                        </WrapPanel>
                        <WrapPanel>
                            <Label>Nom :</Label>
                            <TextBlock Text="nom_Filiere" Padding="6,4,0,0"/>
                        </WrapPanel>
                        <WrapPanel>
                            <Label>Responsable :</Label>
                            <TextBlock Text="nom_Respo" Padding="3,4,0,0"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>
                </StackPanel>
                <WrapPanel Grid.Row="0" Grid.Column="2" x:Name="cards">
                </WrapPanel>
            </Grid>
        </Grid>
    </StackPanel>
</Window>
